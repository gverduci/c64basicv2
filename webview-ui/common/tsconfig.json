{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "build"],
  "filesGlob": [
      "./**/*.tsx",
      "!./node_modules/**/*.ts"
  ],
  "files": [
      "./src/index.tsx"
  ]
}