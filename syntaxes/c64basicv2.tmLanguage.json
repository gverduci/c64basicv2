{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "C64 BASICV2",
	"patterns": [
		{
			"include": "#control"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#other"
		},
		{
			"include": "#otherString"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numerics"
		},
		{
			"include": "#vardefs"
		},
		{
			"include": "#func"
		}
	],
	"repository": {
		"func": {
			"patterns": [{
				"name": "entity.name.function.c64basicv2",
				"match": "(def fn|fn)\\s+([a-z0-9]+)",
				"captures": {
					"1": {
						"name": "keyword.control.c64basicv2"
					},
					"2": {
						"name": "entity.name.function.c64basicv2"
					}
				}
			}]
		},			
		"comments": {
			"patterns": [{
				"name": "comment.line.c64basicv2",
				"match": "(rem)(.*)"
			}]
		},
		"vardefs": {
			"patterns": [{
				"name": "storage.modifier.c64basicv2",
				"match": "(dim|data|let)"
			}]
		},	
		"numerics": {
			"patterns": [{
				"name": "constant.numeric.c64basicv2",
				"match": "([0-9]+)"
			}]
		},
		"control": {
			"patterns": [{
				"name": "keyword.control.c64basicv2",
		    	"match": "(end|for|gosub|goto|if|next|return|step|stop|then|to)"
			}]
		},
		"other": {
			"patterns": [{
				"name": "keyword.other.c64basicv2",
		    	"match": "(abs|asc|atn|close|clr|cmd|cont|cos|data|exp|fre|get|get#|input|input#|int|len|let|list|load|log|new|next|on|open|peek|Ï€|poke|pos|print|print#|read|restore|rnd|run|save|sgn|sin|spc|sqr|status|sys|tab|tan|time\\$|time|ti\\$|ti|usr|val|verify|wait|chr\\$|left\\$|mid\\$|right\\$|str\\$|stop|st)"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator.c64basicv2",
				"match": "(\\*|/|\\+|-|\\^|=|<>|<|>|<=|=<|>=|=>|and|or|not)"
			}]
		},		
		"strings": {
			"name": "string.quoted.double.c64basicv2",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.c64basicv2",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.c64basicv2"
}